{
  "name": "e-van-leasing",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && next-sitemap",
    "start": "next start -p ${PORT:-3000}",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "e2e": "playwright test",
    "prepare": "husky install",
    "import:csv": "tsx -r dotenv/config scripts/import-csv.ts",
    "autotrader:sync": "tsx -r dotenv/config scripts/sync-autotrader.ts"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.441.0",
    "mongodb": "^6.8.0",
    "next": "14.2.5",
    "next-sitemap": "^4.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.52.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "csv-parse": "^5.5.6",
    "eslint": "^9.8.0",
    "eslint-config-next": "14.2.5",
    "husky": "^9.1.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "playwright": "^1.46.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc -p tsconfig.json --noEmit --pretty false"
    ]
  }
}